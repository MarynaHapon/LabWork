.wrap 
	padding 40px 0

.wrap-box
	padding 20px 0

.inner 
	padding 10px 30px

.progress-wrap
	padding 10px 0 0

.flex-vertical
	display flex
	flex-direction column
	justify-content space-between

.hidden
	display none

.modal
	background-color rgba(0, 0, 0, 0.56)
	transition 0.3s

.message 
	min-width 300px

.btn-flex-group
	display flex
	justify-content space-between

.userFirstName
.userLastName
.userNumber
	position relative

.btnFirstNameReset
.btnLastNameReset
.deleteUserNumber
	position absolute
	bottom 6px
	right 2px

.btnFirstNameReset:hover
.btnLastNameReset:hover
.deleteUserNumber:hover
	cursor pointer

.btn-num-group
	margin 0.75rem 0 0 0